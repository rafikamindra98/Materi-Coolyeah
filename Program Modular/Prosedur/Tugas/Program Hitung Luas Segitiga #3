unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
    Button1: TButton;
    Label3: TLabel;
    Edit3: TEdit;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
  alas,tinggi:integer;
  luas:real;
  procedure MenghitungLuasSegitiga;
  begin
  luas:=(alas*tinggi)/2;
  end;

  BEGIN
  alas:=StrToInt(Edit1.Text);
  tinggi:=StrToInt(Edit2.Text);
  MenghitungLuasSegitiga;
  Edit3.Text:=FloatToStr(luas);
END;

end.
