unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Edit1: TEdit;
    Label3: TLabel;
    Edit2: TEdit;
    Button1: TButton;
    Edit3: TEdit;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
   x, y : integer;
Function fpb(x, y :integer) : integer;
begin
   if y = 0 then
      result:=x
   else
      result:=fpb(y, x mod y);
   end;

BEGIN
x:=StrToInt(Edit1.Text);
y:=StrToInt(Edit2.Text);
Edit3.Text:=IntToStr(fpb(x,y));
END;

end.
