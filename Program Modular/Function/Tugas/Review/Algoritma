REVIEW FUNGSI EKSPONEN
FUNCTION fak(n:integer)-->integer
DEKLARASI
  i,f:integer
ALGORITMA
  if n=0 then
    return 1
  else
    f<--1
    for i<--1 to n do
      f<--f*i
    endfor
    return f
  endif

FUNCTION pangkat(x:real, n:integer)-->real
DEKLARASI
  i:integer
  p:real
ALGORITMA
  if n=0 then
    return 1
  else
    p=1
    for i<--1 to n do
      p<--p*x
    endfor
    return p
  endif

FUNCTION eksp(x)-->real
DEKLARASI
  const m=4
  var S:real
      i:integer
  function fak(n:integer)-->integer
  function pangkat(x:real,n:integer)-->real
ALGORITMA
  S=0
  for i<--0 to m do
    S=S+pangkat(x,i)/fak(i)
  endfor
  return S

PROGRAM HitungEksp
DEKLARASI
  x:real
  function eksp(x)-->real
ALGORITMA                            
  read(x)
  if x=0 then
    write(1)     
  else
    write(eksp(x))
  endif
